/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

page{
  width: 100%;
  height: 100%;
}

.scroll_box{
  overflow: hidden;
  width: 100%;
  height: 50px;
  white-space: nowrap;
}

.scroll-view-item_H{
  width: 30px;
  height: 30px;
  margin-left: 10px;
  margin-top: 10px;
  display: inline-block;
}

.scroll-view-item-unselected{
  width: 100%;
  height: 100%;
  border-color: gainsboro;
  border-width: 0.5;
  border-style: solid;
}

.scroll-view-item-selected{
  width: 100%;
  height: 100%;
  border-color: rgb(0, 0, 0);
  border-width: 0.5;
  border-style: solid;
}